<configuration debug="false">
    <!-- Suppress ALL logback output including internal status -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <!-- NOP appender - discards all logs -->
    <appender name="NOP" class="ch.qos.logback.core.helpers.NOPAppender"/>

    <!-- File appender for service logging (only used when service enables it) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/barn/logs/barn.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{ISO8601} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
        Root logger OFF by default - CLI commands produce no log output.
        Service startup explicitly enables logging via LoggingConfig.
    -->
    <root level="OFF">
        <appender-ref ref="NOP"/>
    </root>
</configuration>
